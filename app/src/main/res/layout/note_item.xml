<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/noteItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     app:cardBackgroundColor="@color/mainActBak"

    >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@color/mainActBak"
    >


<LinearLayout
    android:id="@+id/tvOptionMore"
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:text="@string/morecode"
        android:textStyle="bold"

        android:gravity="center_horizontal"
        android:textColor="@color/txtColor"
        />

</LinearLayout>



    <TextView
        android:id="@+id/tvTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummytext"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/colorAccent"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleItem" />

    <ImageView
        android:id="@+id/imgContentItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/dummypic"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/tvDescItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>